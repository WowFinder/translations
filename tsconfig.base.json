{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",
        "allowJs": true,
        "declaration": true,
        "module": "commonjs",
        "lib": ["ES6"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./generated",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": []
}
