{
    "name": "@wowfidner/translations",
    "version": "0.0.1",
    "description": "Localization assets for WowFinder apps and modules",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/WowFinder/translations.git",
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "lint:base": "eslint . --ext js,ts",
        "lint:stricter": "eslint . --ext js,ts --config .eslintrc-stricter.js",
        "lint": "npm-run-all -sc lint:base lint:stricter",
        "lint:fix": "eslint . --ext js,ts --fix",
        "format": "prettier --write \"{src,translations}/**/*.{js,ts,json,json5}\"",
        "format:check": "prettier --check \"{src,translations}/**/*.{js,ts,json,json5}\"",
        "test": "jest --passWithNoTests",
        "test:coverage": "jest --coverage --passWithNoTests",
        "checks:quick": "npm-run-all -pc lint tsc",
        "checks:standard": "npm-run-all -pc lint tsc test",
        "checks:full": "npm-run-all -sc lint:fix format build test:coverage",
        "checks:pedantic": "npm-run-all -sc lint format:check build test:coverage",
        "build:pre": "rimraf dist generated",
        "build:generate": "ts-node src/generate.ts",
        "build:tsc": "tsc",
        "build:setup": "ts-node src/setup.ts",
        "build": "npm-run-all -s build:pre build:generate build:tsc build:setup",
        "prepublishOnly": "yarn run build",
        "prepare": "yarn run build"
    },
    "dependencies": {
        "@wowfinder/ts-utils": "^0.1.4",
        "i18next": "^23.10.1",
        "i18next-browser-languagedetector": "^7.2.1",
        "json5": "^2.2.3",
        "path-browserify": "^1.0.1",
        "react": "^18.2.0",
        "react-i18next": "^14.1.0"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.5",
        "@types/node": "^20.12.7",
        "@types/react": "^18",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "@typescript-eslint/utils": "^7.4.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-istanbul": "^0.1.2",
        "eslint-plugin-misc": "^2.1.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "typescript": "^5.4.3"
    },
    "packageManager": "yarn@4.1.1"
}
