{
    "name": "@wowfinder/translations",
    "type": "commonjs",
    "version": "0.0.7",
    "description": "Localization assets for WowFinder apps and modules",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WowFinder/translations.git"
    },
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "format": "prettier --write \"{src,translations}/**/*.{js,ts,json,json5}\"",
        "format:check": "prettier --check \"{src,translations}/**/*.{js,ts,json,json5}\"",
        "test": "jest --passWithNoTests",
        "test:coverage": "jest --coverage --passWithNoTests",
        "checks:quick": "npm-run-all -pc lint tsc",
        "checks:standard": "npm-run-all -pc lint tsc test",
        "checks:full": "npm-run-all -sc lint:fix format build test:coverage",
        "checks:pedantic": "npm-run-all -sc lint format:check build test:coverage",
        "build:pre": "rimraf dist generated",
        "build:generate": "tsx scripts/generate.ts",
        "build:tsc:src": "tsc -p ./tsconfig.src.json",
        "build:tsc:generated": "tsc -p ./tsconfig.generated.json",
        "build:tsc": "npm-run-all -s build:tsc:src build:tsc:generated",
        "build:setup": "tsx scripts/setup.ts",
        "build": "npm-run-all -s build:pre build:generate build:tsc build:setup",
        "prepublishOnly": "yarn run build",
        "prepare": "yarn run build"
    },
    "dependencies": {
        "@wowfinder/ts-utils": "^0.1.11",
        "globals": "^16.0.0",
        "i18next": "^25.0.0",
        "i18next-browser-languagedetector": "^8.0.4",
        "json5": "^2.2.3",
        "path-browserify": "^1.0.1",
        "react": "^19.1.0",
        "react-i18next": "^15.4.1"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.8",
        "@stylistic/eslint-plugin-js": "^4.2.0",
        "@tsconfig/recommended": "^1.0.8",
        "@types/node": "^22.14.1",
        "@types/react": "^19.1.2",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "@typescript-eslint/utils": "^8.30.1",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-istanbul": "^0.1.2",
        "eslint-plugin-misc": "^3.3.1",
        "eslint-plugin-n": "^17.17.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.6",
        "eslint-plugin-promise": "^7.2.1",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.3.2",
        "tslib": "^2.8.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3"
    },
    "packageManager": "yarn@4.9.1"
}
